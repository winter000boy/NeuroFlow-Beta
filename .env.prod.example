# Production Environment Configuration

# Database Configuration
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=your_secure_mongodb_password
MONGODB_DATABASE=jobapp
MONGODB_PORT=27017

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_for_production
JWT_EXPIRATION=86400

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=jobapp-files-prod

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_production_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@yourcompany.com

# Service Ports
AUTH_SERVICE_PORT=8081
USER_SERVICE_PORT=8082
JOB_SERVICE_PORT=8083
APPLICATION_SERVICE_PORT=8084
NOTIFICATION_SERVICE_PORT=8085
FRONTEND_PORT=3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.yourcompany.com/api
NEXT_PUBLIC_APP_NAME=JobApp
NEXT_PUBLIC_APP_URL=https://yourcompany.com

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Logging Configuration
LOGGING_LEVEL=INFO